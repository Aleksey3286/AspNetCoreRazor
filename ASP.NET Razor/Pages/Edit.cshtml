@page
@model AspNetRazor.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit work task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkTask.Id" />
            <div class="form-group">
                <label asp-for="WorkTask.Name" class="control-label"></label>
                <input asp-for="WorkTask.Name" class="form-control" />
                <span asp-validation-for="WorkTask.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkTask.Priority" class="control-label"></label>
                <input asp-for="WorkTask.Priority" class="form-control" />
                <span asp-validation-for="WorkTask.Priority" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="WorkTask.StatusName" class="control-label"></label>
                <select asp-for="SelectedStatusId" asp-items="@Model.StatusItems">
                    <option asp-for="WorkTask.StatusName"></option>
                </select>
                <span asp-validation-for="WorkTask.StatusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}